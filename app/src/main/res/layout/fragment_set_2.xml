<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/scrollView_set2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_day_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/all_row_bg_sele"
                mapp:image_src="@drawable/setf_day"
                mapp:text_gone="true"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:background="@color/btn_textColor">

                <ImageView android:layout_width="match_parent"
                           android:layout_height="1px"
                           android:layout_marginLeft="13dp"
                           android:layout_marginRight="13dp"
                           android:background="@color/between_row_bg"/>
            </LinearLayout>

            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_medic_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/all_row_bg_sele"
                mapp:image_src="@drawable/setf_add"
                mapp:text_only="true"
                mapp:text_str="@string/medic_times"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:background="@color/btn_textColor">

                <ImageView android:layout_width="match_parent"
                           android:layout_height="1px"
                           android:layout_marginLeft="13dp"
                           android:layout_marginRight="13dp"
                           android:background="@color/between_row_bg"/>
            </LinearLayout>
            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_medic_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/all_row_bg_sele"
                mapp:image_src="@drawable/setf_repeat"
                mapp:invisible="true"
                mapp:text_gone="true"
                mapp:text_str="@string/repeat"/>

            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_morning_setf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_morning"
                mapp:text_str="@string/A.M"
                mapp:text_str_2="@string/reminder_time"/>
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/layot_1"
                          android:visibility="gone"
                          android:layout_height="1px"
                          android:background="@color/btn_textColor">
                <ImageView android:layout_width="match_parent"
                           android:layout_height="1px"
                           android:layout_marginLeft="13dp"
                           android:layout_marginRight="13dp"
                           android:background="@color/between_row_bg"/>
            </LinearLayout>
            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_morning_medic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_medicine"
                mapp:invisible="true"
                mapp:text_hid_2="@string/add_medicine"
                mapp:text_str="@string/medicine"/>

            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_nooing_setf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_nooing"
                mapp:text_str="@string/Noon"
                mapp:text_str_2="@string/reminder_time"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:id="@+id/layot_2"
                          android:visibility="gone"
                          android:background="@color/btn_textColor">

                <ImageView android:layout_width="match_parent"
                           android:layout_height="1px"
                           android:layout_marginLeft="13dp"
                           android:layout_marginRight="13dp"
                           android:background="@color/between_row_bg"/>
            </LinearLayout>
            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_nooning_medic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_medicine"
                mapp:invisible="true"
                mapp:text_hid_2="@string/add_medicine"
                mapp:text_str="@string/medicine"/>

            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_afternoon_setf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_afternoon"
                mapp:text_str="@string/P.M"
                mapp:text_str_2="@string/reminder_time"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:id="@+id/layot_3"
                          android:visibility="gone"
                          android:background="@color/btn_textColor">

                <ImageView android:layout_width="match_parent"
                           android:layout_height="1px"
                           android:layout_marginLeft="13dp"
                           android:layout_marginRight="13dp"
                           android:background="@color/between_row_bg"/>
            </LinearLayout>
            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_afternoon_medic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_medicine"
                mapp:invisible="true"
                mapp:text_hid_2="@string/add_medicine"
                mapp:text_str="@string/medicine"/>

            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_eveing_setf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_eveing"
                mapp:text_str="@string/bed_time"
                mapp:text_str_2="@string/reminder_time"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:id="@+id/layot_4"
                          android:visibility="gone"
                          android:background="@color/btn_textColor">

                <ImageView android:layout_width="match_parent"
                           android:layout_height="1px"
                           android:layout_marginLeft="13dp"
                           android:layout_marginRight="13dp"
                           android:background="@color/between_row_bg"/>
            </LinearLayout>
            <com.cjy.flb.customView.isWidgetToSet
                android:id="@+id/toset_eveing_medic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/all_row_bg_sele"
                android:visibility="gone"
                mapp:image_src="@drawable/setf_medicine"
                mapp:invisible="true"
                mapp:text_hid_2="@string/add_medicine"
                mapp:text_str="@string/medicine"/>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>