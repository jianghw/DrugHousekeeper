<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <LinearLayout
            android:id="@+id/textView_account"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/all_row_bg_sele"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView android:layout_width="58dp"
                       android:id="@+id/img_head_mefra"
                       android:layout_height="58dp"
                       android:layout_marginLeft="10dp"
                       android:src="@drawable/ic_medicm_head"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_me_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/account"
                    android:textColor="@color/body_text_color"
                    android:textSize="?attr/fontsize_2"/>
                <TextView
                    android:id="@+id/tv_me_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="@string/regist_ac_email"
                    android:textColor="@color/et_hint"
                    android:textSize="?attr/fontsize_1"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/textView_medicine_manager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/all_row_bg_sele">
            <ImageView android:id="@+id/img_1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="16dp"
                       android:src="@drawable/mef_medic"/>
            <TextView
                style="@style/text_mef_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_1"
                android:text="@string/box_management"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/ic_me_right"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="1px"
                      android:background="@color/btn_textColor">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_marginLeft="13dp"
                       android:layout_marginRight="13dp"
                       android:background="@color/between_row_bg"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/textView_problems_medic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/all_row_bg_sele">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/img_2"
                       android:layout_height="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="16dp"
                       android:src="@drawable/mef_medicine"/>
            <TextView
                style="@style/text_mef_font"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine_hamful_feedback"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/ic_me_right"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/textView_my_meal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/all_row_bg_sele">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/img_3"
                       android:layout_height="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="16dp"
                       android:src="@drawable/ic_my_meal"/>
            <TextView
                style="@style/text_mef_font"
                android:layout_centerVertical="true"
                android:id="@+id/tv_meal_me"
                android:layout_toRightOf="@+id/img_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_package"/>
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/img_mymeal_new"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="8dp"
                       android:src="@drawable/ic_new_me"
                       android:layout_toRightOf="@+id/tv_meal_me"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/ic_me_right"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/textView_general"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/all_row_bg_sele">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/img_4"
                       android:layout_height="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="16dp"
                       android:src="@drawable/ic_general"/>
            <TextView
                style="@style/text_mef_font"
                android:id="@+id/tv_general_me"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_use"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_centerVertical="true"
                       android:id="@+id/img_general_new"
                       android:layout_marginLeft="8dp"
                       android:src="@drawable/ic_new_me"
                       android:layout_toRightOf="@+id/tv_general_me"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/ic_me_right"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>