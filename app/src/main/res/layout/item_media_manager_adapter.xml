<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/row_height"
                  android:background="@drawable/all_row_bg_sele"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView android:id="@+id/img_head"
                   android:scaleType="centerInside"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1.5"
                   android:src="@drawable/ic_medicm_head"/>
        <TextView android:id="@+id/tv_name"
                  style="@style/body_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:singleLine="true"
                  android:textColor="@color/body_text_color"/>
        <TextView style="@style/remark_texts"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.5"
                  android:singleLine="true"
                  android:text="@string/box_id"
                  android:textColor="@color/body_text_color"/>
        <TextView android:id="@+id/tv_medicID"
                  style="@style/remark_texts"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:singleLine="true"
                  android:textColor="@color/body_text_color"/>

        <ImageView android:id="@+id/img_choose"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="8dp"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:padding="10dp"
                   android:visibility="invisible"
                   android:src="@drawable/call_choose"/>
        <ImageView
            android:id="@+id/trash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:layout_weight="2"
            android:background="#FF5534"
            android:visibility="gone"
            android:src="@drawable/item_trash"/>

    </LinearLayout>
<!--    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:id="@+id/lrlayout_imag"
                  android:background="@color/btn_textColor">

        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>-->

</LinearLayout>