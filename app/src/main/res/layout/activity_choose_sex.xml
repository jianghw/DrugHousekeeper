<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.cjy.flb.activity.ChooseSexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ll_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sex_bg_select"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/tv_man"
            android:textColor="@color/body_text_color"
            android:textSize="@dimen/btn_textSize"/>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/et_Line"/>-->

        <TextView
            android:id="@+id/tv_woman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/sex_bg_select"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/tv_woman"
            android:textColor="@color/body_text_color"
            android:textSize="@dimen/btn_textSize"/>

    </LinearLayout>

</RelativeLayout>
