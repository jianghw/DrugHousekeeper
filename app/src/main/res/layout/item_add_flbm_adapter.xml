<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_row_bg_sele"
        android:orientation="horizontal">
        <!--<TextView android:id="@+id/tv_position"-->
                  <!--android:layout_width="0dp"-->
                  <!--android:layout_height="wrap_content"-->
                  <!--android:layout_weight="0.5"-->
                  <!--android:gravity="center"-->
                  <!--android:textColor="@color/body_text_color"-->
                  <!--android:textSize="@dimen/et_hint_week"/>-->
        <TextView android:id="@+id/tv_body"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="6"
                  android:gravity="center"
                  android:textColor="@color/body_text_color"
                  android:textSize="@dimen/et_hint_week"/>

        <TextView android:id="@+id/tv_count"
                  android:layout_width="0dp"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:visibility="gone"
                  android:textColor="@color/body_text_color"
                  android:textSize="?attr/fontsize_2"/>
        <TextView android:id="@+id/tv_unit"
                  android:layout_width="0dp"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:visibility="gone"
                  android:gravity="center_vertical|left"
                  android:text="@string/medicine_unit_danwei"
                  android:textColor="@color/body_text_color"
                  android:textSize="?attr/fontsize_2"/>
    </LinearLayout>
</LinearLayout>