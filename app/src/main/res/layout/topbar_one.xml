<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/action_bar_height"
              android:background="@color/toolBar_bg"
              android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_top_back"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:background="@drawable/bg_actionbar_back_select"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="16dp"
            android:src="@drawable/topbar_back"/>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/toolbarPopup_bg_color2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/btn_textColor"
        android:textSize="?attr/fontsize_3"/>

    <ImageView android:id="@+id/img_toolbar_separator"
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:layout_marginBottom="12dp"
               android:layout_marginTop="12dp"
               android:layout_toLeftOf="@+id/toolbar"
               android:background="@color/toolbarPopup_bg_color2"
               android:visibility="gone"/>
    <ImageView
        android:id="@+id/img_top_scan"
        android:layout_width="60dp"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/bg_actionbar_back_select"
        android:padding="14dp"
        android:src="@drawable/scan"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_top_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/bg_actionbar_back_select"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:textColor="@color/btn_textColor"
        android:textSize="?attr/fontsize_2"
        android:visibility="gone"/>
</LinearLayout>



