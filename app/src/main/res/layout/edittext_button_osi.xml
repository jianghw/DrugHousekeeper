<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="visible"
            android:gravity="left|bottom"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>

        <ImageView
            android:id="@+id/imag_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_medic_search"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="4"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:textColor="@color/body_text_color"
            android:textColorHint="@color/et_hint"
            android:textSize="?attr/fontsize_2"/>
        <Button
            android:id="@+id/btn_clock"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_get_auth_code_bg"
            android:text="@string/get_auth_code"
            android:textColor="@color/btn_textColor"
            android:textSize="@dimen/et_hint"/>
        <CheckBox
            android:id="@+id/cb_tail"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/eye_selector"
            android:visibility="gone"
            android:button="@null"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_focus"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_below="@+id/et_content"
        android:layout_centerHorizontal="true"
        android:background="@color/et_Line"/>

</LinearLayout>
