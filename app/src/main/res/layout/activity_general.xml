<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ll_bg"
              android:orientation="vertical" android:weightSum="1">
    <include
        android:id="@+id/include"
        layout="@layout/topbar_one"/>
    <RelativeLayout
        android:id="@+id/textView_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="8dp"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/message_notification"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/btn_textColor">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/textView_language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/language_selection"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/btn_textColor">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/textView_font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/font"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/btn_textColor">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/textView_operational"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_oper"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/operational_guidelines"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:id="@+id/img_general_new"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="8dp"
                   android:layout_toRightOf="@+id/tv_oper"
                   android:src="@drawable/ic_new_me"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/btn_textColor">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/textView_updates"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/check_for_updates"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/btn_textColor">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/textView_problems"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/procedure_feedback"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/btn_textColor">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:background="@color/between_row_bg"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/textView_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/about_us"
            android:textColor="@color/body_text_color"
            android:textSize="?attr/fontsize_2"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="16dp"
                   android:src="@drawable/ic_me_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textView_exit"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/all_row_bg_sele">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/exit"
            android:textColor="@color/viewfinder_laser"
            android:textSize="?attr/fontsize_2"/>
    </RelativeLayout>
</LinearLayout>