<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 填充 -->
    <solid android:color="@color/btn_textColor"/>
    <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/btn_Sgreen_normal"/>
    <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners android:bottomRightRadius="4dp"
             android:topRightRadius="4dp"/>
    <!-- 设置四个角的半径 -->

    <!-- 间隔  -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"/>

</shape>