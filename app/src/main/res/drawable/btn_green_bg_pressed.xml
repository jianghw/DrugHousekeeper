<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 渐变 -->
    <gradient
        android:endColor="@color/btn_green_pressed"
        android:gradientRadius="50"
        android:startColor="@color/btn_green_normal"
        android:type="radial" />

    <!-- 描边 -->
    <stroke
        android:width="2dp"
        android:color="@color/btn_textColor" />

    <!-- 圆角 -->
    <corners android:radius="5dp" />

    <!-- 间隔  -->
    <padding
        android:bottom="10dp"
        android:left="15dp"
        android:right="15dp"
        android:top="10dp" />

</shape>